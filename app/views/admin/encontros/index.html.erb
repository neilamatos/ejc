<div class="page-header">
  <h1>Encontros</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Descrição</th>
                <th>Tema</th>
                <th>Local</th>
                <th>Data</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @encontros.each do |encontro| %>
                <tr>
                  <td><%= encontro.descricao %></td>
                  <td><%= encontro.data %></td>
                  <td>                    
                    <%= link_to 'Editar', edit_admin_encontro_path(encontro), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_encontro_path(encontro), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @encontros %>
        </div>
      </div>
    </div>
  </div>
</div>
