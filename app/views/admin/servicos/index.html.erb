<div class="page-header">
  <h1>Onde <%= @pessoa.nome %> serviu:</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Encontro</th>
                <th>Equipe/Função</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @servicos.each do |s| %>
                <tr>
                  <td><%= s.pessoa.nome %></td>
                  <td><%= s.encontro.descricao %></td>
                  <td><%= s.equipe_funcao.blank? ? '-': s.equipe_funcao.descricao %></td>
                  <td>
                    <%= link_to 'Editar', edit_admin_pessoa_servico_path(s.pessoa, s), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_pessoa_servico_path(s.pessoa, s), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @servicos %>
        </div>
      </div>
    </div>
  </div>
</div>
