<div class="page-header">
  <h1>Pessoas</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Endereço</th>
                <th>Encontro que fez</th>
                <th>Onde gostaria de servir?</th>
                <th>Habilidades</th>
                <th>Serviços</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @pessoas.each do |p| %>
                <tr>
                  <td><%= p.nome %></td>
                  <td><%= p.age %></td>
                  <td><%= p.endereco %>-<%= p.bairro%></td>
                  <td><%= p.encontro.blank? ? '-': p.encontro.descricao %></td>


                  <td>
                    <% p.servicos.each do |s|%>
                      <li><%= s.encontro.blank? ? '-':s.encontro.descricao%>/<%= s.equipe_funcao.blank? ? '-': s.equipe_funcao.descricao %></li>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to '+ Serviço', new_admin_pessoa_servico_path(p), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Serviços', admin_pessoa_servicos_path(p), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Editar', edit_admin_pessoa_path(p), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_pessoa_path(p), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
