<div class="page-header">
  <h1>Configuração das Equipes</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Equipe</th>
                <th>Função</th>
                <th>Mínimo</th>
                <th>Máximo</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @equipe_funcoes.each do |ef| %>
                <tr>
                  <td><%= ef.equipe.descricao %></td>
                  <td><%= ef.funcao.descricao %></td>
                  <td><%= ef.minimo %></td>
                  <td><%= ef.maximo %></td>
                  <td>
                    <%= link_to 'Editar', edit_admin_equipe_funcao_path(ef), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_equipe_funcao_path(ef), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
