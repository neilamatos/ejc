<li class="<%= 'active' if params[:controller] == 'home' %>">
  <%= link_to home_path do %>
    <i class="fa fa-dashboard fa-fw"></i>
    <span class="nav-label">Início</span>
  <% end %>
</li>

<li class="<%= 'active' if params[:controller] == 'admin/encontros' %>">
  <%= link_to admin_encontros_path do %>
    <i class="fa fa-dashboard fa-fw"></i>
    <span class="nav-label">Encontros</span>
  <% end %>
</li>

<li class="<%= 'active' if params[:controller] == 'admin/equipe_funcoes' %>">
  <%= link_to admin_equipe_funcoes_path do %>
    <i class="fa fa-dashboard fa-fw"></i>
    <span class="nav-label">Configuração Equipes</span>
  <% end %>
</li>

<li class="<%= 'active' if params[:controller] == 'admin/pessoas' %>">
  <%= link_to admin_pessoas_path do %>
    <i class="fa fa-dashboard fa-fw"></i>
    <span class="nav-label">Pessoas</span>
  <% end %>
</li>

<li class="<%= 'active' if params[:controller] == 'admin/servicos' %>">
  <%= link_to admin_servicos_path do %>
    <i class="fa fa-dashboard fa-fw"></i>
    <span class="nav-label">Serviços</span>
  <% end %>
</li>

<%
 acessos_selected = params[:controller] == 'admin/uos' || params[:controller] == 'admin/users' || params[:controller] == 'admin/roles'
%>
<% if can?(:index, Uo) || can?(:index, User) || can?(:index, Role) %>
  <li class="<%= 'active' if acessos_selected %>">
    <%= link_to "#" do %>
      <i class="fa fa-users fa-fw"></i>
      <span class="nav-label">Acessos</span>
      <span class="fa arrow"></span>
    <% end %>
    <ul class="nav nav-second-level">
      <% if can?(:index, Uo) %>
        <li class="<%= 'active' if params[:controller] == 'admin/uos' %>">
          <%= link_to admin_uos_path do %>
            <i class="fa fa-graduation-cap fa-fw"></i>
            Uos
          <% end %>
        </li>
      <% end %>
      <% if can?(:index, User) %>
        <li class="<%= 'active' if params[:controller] == 'admin/users' %>">
          <%= link_to admin_users_path do %>
            <i class="fa fa-user fa-fw"></i>
            Usuários
          <% end %>
        </li>
      <% end %>
      <% if can?(:index, Role) %>
        <li class="<%= 'active' if params[:controller] == 'admin/roles' %>">
          <%= link_to admin_roles_path do %>
            <i class="fa fa-cubes fa-fw"></i>
            Papéis
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>
